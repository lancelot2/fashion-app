<div class="container-large">

  <!-- Header -->
  <div class="company-index-header">
    <h1>Companies index page</h1>
    <%= link_to "Create a new company", new_company_path, :class=>"btn btn-primary" %>
  </div>



  <!-- company library -->
  <div class="company-library">
    <table class="table table-condensed table-hover">
      <col width="2">
      <col width="5">
      <col width="10">
      <col width="30">
      <col width="10">
      <thead>
        <tr>
          <th>ID</th>
          <th>Logo</th>
          <th>Name</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @companies.each do |company| %>
          <tr>
            <td><%= company.id %></td>
            <td><%= cl_image_tag(company.logo, width: 60, height: 60, crop: :thumb, gravity: :face) %></td>
            <td><%= company.name %></td>
            <td><%= company.description %></td>
            <td>
              <%= link_to "View", company_path(company), :class=>"btn btn-primary" %>
              <%= link_to "Edit", edit_company_path(company), :class=>"btn btn-primary" %>
              <%= link_to "Delete", company_path(company), method: :delete, data: { confirm: "Are you sure?" }, :class=>"btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
