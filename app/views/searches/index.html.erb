<div class="container-large">

  <!-- Header -->
  <div class="search-index-header">


    <h1><%= t('.search_index_title') %></h1>
    <p><%= t('.search_index_explanations') %></p>
  </div>



  <div class="search-index-body">
    <!-- search library -->
    <div class="search-library">
      <div class="search-library-row">
        <table class="table table-condensed table-hover">
          <thead>
            <tr>
              <th><%= t('.search_name') %></th>
              <th><%= t('.last_update') %></th>
              <th><%= t('.author') %></th>
              <th><%= t('.query') %></th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @searches.each do |search| %>
            <tr>
              <td><strong><%= search.name %></strong></td>
              <td><%= search.updated_at.strftime('%e %b %Y %H:%M') %></td>
              <td><%= search.user.email %></td>
              <td>
                <ul>
                  <% URI(search.url).query.split('&').each do |query| %>
                  <li><%= query.gsub('=', ': ') %></li>
                  <% end %>
                </ul>
              </td>
              <td>
                <%= link_to "Show", search.url %> /
                <a href="#">Extract</a> /
                <a href="#">Duplicate</a> /
                <a href="#">Delete</a>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


