  <div class="container-large">

    <!-- header -->
    <div class="index-page-header">
      <h1>Specific product page</h1>
      <div class="extraction-buttons">
        <a class="btn btn-primary">Generate extration</a>
      </div>
    </div>


    <div class="flex-index">

      <div class="product-description-top">
        <div class="thumbnail-images-carousel">

          <div class="thumbnail-img">

          </div>

        </div>
        <div class="active-image">

        </div>
        <div class="product-main-attributes-boxes">


            <!-- General table -->
            <table class="table table-condensed table-hover">
              <thead>
                <tr>
                  <th>General</th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                  <tr>
                    <td><strong>Name</strong></td>
                    <td>{{ .Name }}</td>
                  </tr>
                  <tr>
                    <td><strong>Gender</strong></td>
                    <td>{{ .Gender }}</td>
                  </tr>
                  <tr>
                    <td><strong>Color(s)</strong></td>
                    <td>{{ .Color }}</td>
                  </tr>
                  <tr>
                    <td><strong>Short product description</strong></td>
                    <td>TODO: short desc</td>
                  </tr>
                  <tr>
                    <td><strong>Long product description</strong></td>
                    <td>{{ range $i, $line := .Details -}}
                      {{ if ne $i 0 }}<br/>{{ end }}{{ $line }}
                    {{- end}}</td>
                  </tr>
              </tbody>

            </table>


            <!-- Identifiers table -->
            <table class="table table-condensed table-hover">
              <thead>
                <tr>
                  <th>Identifiers</th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                  <tr>
                    <td><strong>Product ID</strong></td>
                    <td>TODO: figure out</td>
                  </tr>
                  <tr>
                    <td><strong>{{ .Orig }} SKU</strong></td>
                    <td><a href="{{ .OrigUrl }}">TODO: fill</a></td>
                  </tr>
              </tbody>

            </table>
          </div>
        </div>
      </div>









      <div class="product-secondary-attributes-boxes">

        <!-- Table for images attributes -->
        <table class="table table-condensed table-hover">
          <thead>
            <tr>
              <th>Images</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
              <tr>
                <td><strong>Primary image</strong></td>
                <td><a href="/img/{{ index .Images 0 }}">{{ index .Images 0 }}</a></td>
              </tr>
              <tr>
                <td><strong>Secondary images</strong></td>
                <td>{{ range $i, $img := .Images -}}
                  {{- if ne $i 0 -}}
                  <a href="/img/{{ $img }}">{{ $img }}</a><br/>
                  {{- end -}}
                {{ end }}</td>
              </tr>
          </tbody>
        </table>

        <!-- Table for brand attributes -->
        <table class="table table-condensed table-hover">
          <thead>
            <tr>
              <th>Brand</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
              <tr>
                <td><strong>Brand name</strong></td>
                <td>{{ .Brand }}</td>
              </tr>
              <tr>
                <td><strong>Brand logo</strong></td>
                <td>TODO: image?</td>
              </tr>
              <tr>
                <td><strong>Brand description</strong></td>
                <td>TODO: desc?</td>
              </tr>
          </tbody>
        </table>

