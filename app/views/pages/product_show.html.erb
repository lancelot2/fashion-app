              </tr>
              <tr>
                <td><strong>Category 3</strong></td>
                <td>{{ .Categ3 }}</td>
              </tr>
          </tbody>
        </table>

        <!-- Table for sizes attributes -->
        <table class="table table-condensed table-hover">
          <thead>
            <tr>
              <th>Sizes</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
              <tr>
                <td><strong>UK Sizes</strong></td>
                <td>{{ range $i, $size := .Sizes -}}
