  <div class="container">

    <!-- header -->
    <div class="index-page-header">
      <h1>Specific product page</h1>
      <div class="extraction-buttons">
        <a class="btn btn-primary">Generate extration</a>
      </div>
    </div>


    <div class="flex-index">

      <div class="product-description-top">
        <div class="active-image">

        </div>
        <div class="product-main-attributes-boxes">


            <!-- General table -->
            <table class="table table-condensed table-hover">
              <thead>
                <tr>
                  <th>General</th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                  <tr>
                    <td><strong>Name</strong></td>
                    <td><%= @item['full_name'] %></td>
                  </tr>
                  <tr>
                    <td><strong>Gender</strong></td>
                    <td>Female</td>
                  </tr>
                  <tr>
                    <td><strong>Color Family</strong></td>
                    <td><%= @item['color'] %></td>
                  </tr>
                  <tr>
                    <td><strong>In Stock?</strong></td>
                    <td><%= @item['in_stock'] ? 'Yes' : 'No' %></td>
                  </tr>
                  <tr>
                    <td><strong>Details</strong></td>
                    <td>
                      <ul style="list-style: none;padding-left:0;">
                        <% @item['details'].each do |d| %>
                          <li><%= d %></li>
                        <% end %>
                      </ul>
                    </td>
                  </tr>

              </tbody>

            </table>


            <!-- Identifiers table -->
            <table class="table table-condensed table-hover">
              <thead>
                <tr>
                  <th>Identifiers</th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                  <tr>
                    <td><strong>SKU</strong></td>
                    <td><%= @item['sku'] %></td>
                  </tr>
                  <tr>
                    <td><strong>Product Code</strong></td>
                    <td><%= @item['product_code'] %></td>
                  </tr>
              </tbody>

            </table>
          </div>
        </div>
      </div>


      <div class="product-secondary-attributes-boxes">

        <!-- Table for images attributes -->
        <table class="table table-condensed table-hover">
          <thead>
            <tr>
              <th>Images</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
              <tr>
                <td><strong>Primary image</strong></td>
                <td><%= image_tag @item['photo_urls'][0], :style => "width: 220px" %></td>
              </tr>
              <tr>
                <td><strong>Secondary images</strong></td>
                <td>
                  <% @item['photo_urls'].drop(1).each do |img|%>
                    <%= image_tag img, :style => "width: 160px" %>
                  <% end %>
                </td>
              </tr>
          </tbody>
        </table>

        <!-- Table for brand attributes -->
        <table class="table table-condensed table-hover">
