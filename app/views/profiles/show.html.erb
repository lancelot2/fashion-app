<% content_for(:title) do %>
  <%= @user.first_name %>
<% end %>

<div class="wrapper">
  <div class="container">
    <div class="show-profile-details card-white text-center">
      <h2>Welcome <%= @user.first_name %></h2>
      <%#= cl_image_tag(@user.profile_picture, width: 100, height: 100, crop: :fill, class: "avatar-large my-avatar") %>
      <p><ul>
        <li class=>Name: <em><%= @user.first_name %> <%= @user.last_name %></em></li>
        <li class=>Email: <em><%= @user.email %></em></li>
        <% if @user == current_user %>
          <%= link_to t("Edit my profile"), edit_profile_path, class: "btn btn-warning pets-btn my-btn" %>
        <% end %>
      </ul></p>
    </div>
  </div>
</div>
