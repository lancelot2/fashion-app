.banner {
    background-image: linear-gradient(-225deg, rgba(203,79,79,0.6) 0%, rgba(6, 36, 57, 0.6) 50%), url(<%= image_path("home_page_banner.jpeg") %>);
    color: white;
    text-align: center;
    height: calc(100vh - 50px);
    background-size: cover !important;
    display: flex;
    align-items: center;
    justify-content: center;

    h1 {
        font-size: 50px;
        font-weight: 500;
        text-shadow: 0 1px rgba(0, 0, 0, 0.2);
    }

    p {
        font-size: 20px;
        font-weight: lighter;
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 20px;
    }

    .banner-content {
        width: 950px;
    }

    .banner-buttons {
        display: flex;
        width: 500px;
        justify-content: space-around;
        padding-top: 50px;
        margin: auto;
    }

    .btn-home {
      color: white;
      border: 3px solid $brand-color;
      padding: 10px 18px;
      border-radius: 50px;
      font-size: 18px;
      opacity: 0.9;
    }
    .btn-home:hover {
      opacity: 1;
      text-decoration: none;
      color: white;
    }
}

.pain-point-banner {
  display: flex;
  justify-content: space-around;
}
